<div class="repl-main-ide" id="repl-main-ide"
     style="grid-template-columns: 1fr 10px 2fr; grid-template-rows: 3fr 10px 1fr 0px 30px;">
    <div class="repl-main-ide-console">
        REPL
    </div>
    <div class="repl-main-ide-splitter-h gridsplitter-control-h"></div>
    <div class="repl-main-ide-source">
        <div class="repl-main-ide-toolbar">
            <button class="btn btn-info"><img src="~/images/build.png" />Build</button>
            <button class="btn btn-success"><img src="~/images/play.png" />Run</button>
            <button class="btn btn-danger" disabled="disabled"><img src="~/images/stop.png" />Stop</button>
        </div>
        <iframe src="~/Home/CodeView"></iframe>
    </div>
    <div class="repl-main-ide-splitter-v-err gridsplitter-control-v"></div>
    <div class="repl-main-ide-errors">
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Location</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tr>
                <td><img src="~/images/error.png" /></td>
                <td>Error</td><td>Error</td><td>Error</td>
            </tr>
        </table>
    </div>
    <div></div><!-- empty gutter -->
    <div class="repl-main-ide-status">
        Ready for action!
    </div>
</div>


@section head{
    <script src="~/js/split-grid.min.js"></script>
}
<script>
    const split = Split({ // gutters specified in options
        columnGutters: [{
            track: 1,
            element: document.querySelector('.repl-main-ide-splitter-h'),
        }],
        rowGutters: [{
            track: 1,
            element: document.querySelector('.repl-main-ide-splitter-v-err'),
        }],
        columnMinSizes: {
            0: 100,
            2: 30
        },
        rowMinSizes: {
            0: 100,
            2: 45
        }
    })
    

</script>